<div class="banner">
  <h1>All Cocktails</h1>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="row">
        <div class="card_product col-3">
          <h2><%= cocktail.name  %></h2>
          <%= link_to "Details", cocktail_path(cocktail), class: 'btn btn-success'  %>
          <%= link_to "Delete", cocktail_path(cocktail), method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
